<Window x:Class="PreviewEvents.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <DockPanel KeyDown="Handler" PreviewKeyDown="Handler">
        <ListBox x:Name="Output" DockPanel.Dock="Left" Margin="0 0 10 0" KeyDown="Handler" PreviewKeyDown="Handler"></ListBox>
        <Grid KeyDown="Handler" PreviewKeyDown="Handler">
            <StackPanel KeyDown="Handler" PreviewKeyDown="Handler">
                <Button KeyDown="Handler" PreviewKeyDown="Handler" Content="My Button"></Button>
                <TextBox KeyDown="Handler" PreviewKeyDown="Handler" Text="My TextBox"></TextBox>
            </StackPanel>
        </Grid>
    </DockPanel>

</Window>
