<Window x:Class="LearningShapes.Poly"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Poly" Height="450" Width="800" Background="Pink">
    <Viewbox>
        <WrapPanel>
            <Polyline Points="10 10, 50 10, 50 60, 10 60" Stroke="Red" StrokeThickness="4" Fill="Orange"></Polyline>
            <Polygon Points="10 10, 50 10, 50 60, 10 60" Fill="Yellow" Stroke="Green" StrokeThickness="6" StrokeLineJoin="Round"></Polygon>
            <Polygon Points="10 10, 30 20, 50 10, 50 60, 30 50, 10 60" Stroke="Green" StrokeThickness="6" StrokeLineJoin="Miter" StrokeMiterLimit="1" Fill="Yellow"></Polygon>
            <Polygon Points="10 10, 30 60, 50 10, 50 60, 30 50, 10 60" Fill="Yellow"></Polygon>
            <Polygon Margin="10 10 0 0" Points="25 0, 33 17, 50 19, 38 32, 40 50, 25 42, 10 50, 12 32, 0 19, 17 17" Fill="Yellow"></Polygon>
        </WrapPanel>
    </Viewbox>
</Window>
